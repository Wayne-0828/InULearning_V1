# 應用程式配置
APP_NAME=InULearning Learning Service
APP_VERSION=v1.0.0
DEBUG=false
LOG_LEVEL=INFO

# 服務端口
PORT=8002
HOST=0.0.0.0

# 資料庫配置
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/inulearning
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# JWT 認證
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# 外部服務配置
QUESTION_BANK_SERVICE_URL=http://localhost:8001
AI_ANALYSIS_SERVICE_URL=http://localhost:8003

# CORS 配置
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# 測試配置
TESTING=false
TEST_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/inulearning_test 