# =============================================================================
# InULearning Auth Service 環境變數範例
# =============================================================================

# 應用程式設定
APP_NAME=InULearning Auth Service
APP_VERSION=1.0.0
DEBUG=true

# 資料庫設定 (Docker 環境)
DATABASE_URL=postgresql://aipe-tester:aipe-tester@localhost:5432/inulearning_test

# JWT 設定
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis 設定 (Docker 環境)
REDIS_URL=redis://:redis_password@localhost:6379/0

# CORS 設定
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:8000"]

# 安全設定
BCRYPT_ROUNDS=12 